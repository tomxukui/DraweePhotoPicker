<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picker_btn"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_dir_cover"
        android:layout_width="@dimen/picker_item_directory_img_width"
        android:layout_height="@dimen/picker_item_directory_img_height"
        android:background="@android:color/black"
        app:failureImage="@mipmap/picker_ic_empty"
        app:failureImageScaleType="center"
        app:roundedCornerRadius="3dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="left|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dir_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#292828"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_dir_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#504f4f"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>
